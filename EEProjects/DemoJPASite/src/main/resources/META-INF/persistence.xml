<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
             
   <persistence-unit name="hsobjet" transaction-type="RESOURCE_LOCAL">
      <jta-data-source>java:jboss/datasources/oradatasource</jta-data-source>
      <class>com.hripsite.entity.SiteObject</class>
      
      <properties>
         <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
      </properties>
   </persistence-unit>

   <persistence-unit name="hsattribute" transaction-type="RESOURCE_LOCAL">
      <jta-data-source>java:jboss/datasources/oradatasource</jta-data-source>
      <class>com.hripsite.entity.SiteAttribute</class>
      
      <properties>
         <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
      </properties>
   </persistence-unit>
   
   <persistence-unit name="hsobjet_type" transaction-type="RESOURCE_LOCAL">
      <jta-data-source>java:jboss/datasources/oradatasource</jta-data-source>
      <class>com.hripsite.entity.SiteObject_Type</class>
      
      <properties>
         <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
      </properties>
   </persistence-unit>
   
   <persistence-unit name="hsparameter" transaction-type="RESOURCE_LOCAL">
      <jta-data-source>java:jboss/datasources/oradatasource</jta-data-source>
      <class>com.hripsite.entity.SiteParameter</class>
      
      <properties>
         <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
      </properties>
   </persistence-unit>   
</persistence>