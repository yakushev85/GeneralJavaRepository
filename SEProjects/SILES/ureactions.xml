<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE reactions SYSTEM "dtd/reactions.dtd">
<reactions>
 <!-- Check end of sentence -->
 <reaction>
  <pattern>^(.)*[^\.\!\?]$</pattern>
  <outreaction>Закончи предложение, пожалуйста!</outreaction>
 </reaction>
 
 <!-- Custom reactions -->
 <reaction>
  <pattern>^что\s+такое\s+(.*)\?$</pattern>
  <pattern>^кто\s+такой\s+(.*)\?$</pattern>
  <pattern>^кто\s+такие\s+(.*)\?$</pattern>
  <outreaction></outreaction>
  <customclass>wiki</customclass>
 </reaction>
 <reaction>
  <pattern>^вычисли\s+(.*)[\.\!]$</pattern>
  <pattern>^посчитай\s+(.*)[\.\!]$</pattern>
  <pattern>^сколько\s+будет\s+(.*)\?$</pattern>
  <outreaction></outreaction>
  <customclass>math</customclass>
 </reaction>
 <reaction>
  <pattern>^что\s+ты\s+думаешь\s+(.*)$</pattern>
  <pattern>^какое\s+твоё\s+мнение\s+(.*)$</pattern>
  <outreaction></outreaction>
  <customclass>book</customclass>
 </reaction>
 
 <!-- Default reactions -->
 <!-- 
 <reaction>
  <pattern>^(привет|здраствуй)[^а-я]*</pattern>
  <outreaction>Привет!</outreaction>
  <outreaction>Добрый день!</outreaction>
  <outreaction>Здраствуй!</outreaction>
 </reaction>
  -->
 <reaction>
  <pattern>^(пока|удачи)[^а-я]*</pattern>
  <pattern>^спокойной(\s)+ночи(.)*</pattern>
  <pattern>^до(\s)+свидания(.)*</pattern>
  <outreaction>Пока!</outreaction>
  <outreaction>До свидания!</outreaction>
  <outreaction>Ещё увидимся!</outreaction>
 </reaction>
 <reaction>
  <pattern>^как(\s)+поживаешь[^а-я]*</pattern>
  <pattern>^как(\s)+дела[^а-я]*</pattern>
  <outreaction>Неплохо.</outreaction>
  <outreaction>Хорошо!</outreaction>
  <outreaction>Отлично :)</outreaction>
 </reaction>
 <reaction>
  <pattern>^как(\s)+тебя(\s)+зовут(\s)*\?$</pattern>
  <outreaction>Меня зовут Силес.</outreaction>
 </reaction>
 <reaction>
  <pattern>^сколько(\s)+тебе(\s)+лет(\s)*\?$</pattern>
  <outreaction>Немного! :)</outreaction>
  <outreaction>Не знаю! :/</outreaction>
 </reaction>
 <reaction>
  <pattern>^(очень(\s)+мудро|очень(\s)+умно)[\.\!]$</pattern>
  <outreaction>Спасибо!</outreaction>
 </reaction>
 <reaction>
  <pattern>^сходи(\s)+.*$</pattern>
  <pattern>^сделай(\s)+.*$</pattern>
  <pattern>^купи(\s)+.*$</pattern>
  <pattern>^скачай(\s)+.*$</pattern>
  <outreaction>Не хочу. Не буду.</outreaction>
  <outreaction>А сам не хочешь это сделать?!</outreaction>
 </reaction>
 <reaction>
  <pattern>.*почему(\s)*\?</pattern>
  <outreaction>Это трудно объяснить.</outreaction>
  <outreaction>Понятия не имею.</outreaction>
  <outreaction>Меньше знаешь лучше спишь.</outreaction>
 </reaction>
</reactions>