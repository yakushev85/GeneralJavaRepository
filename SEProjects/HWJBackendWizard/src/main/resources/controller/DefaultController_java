package |packageName|.controller;

import com.google.gson.Gson;
import |packageName|.model.*;
import |packageName|.service.*;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.transaction.annotation.Transactional;
import org.springframework.web.bind.annotation.*;
import org.springframework.core.io.ByteArrayResource;
import org.springframework.core.io.Resource;
import org.springframework.http.MediaType;
import org.springframework.web.multipart.MultipartFile;

import java.util.List;

@RestController
@RequestMapping("/|llentity|s")
public class |entity|Controller {
    @Autowired
    private Gson gson;

    @Autowired
    private |entity|Service |lentity|Service;

    @RequestMapping(value = "/all", method = RequestMethod.GET, produces = "application/json")
    public String getAll() {
        return gson.toJson(|lentity|Service.getAll());
    }

    @RequestMapping(value = "/{id}", method = RequestMethod.GET, produces = "application/json")
    public String getItemById(@PathVariable Long id) {
        return gson.toJson(|lentity|Service.getById(id));
    }

    @RequestMapping(value = "/", method = RequestMethod.POST, produces = "application/json")
    @Transactional
    public String add(@RequestBody |entity| |lentity|) {
        return gson.toJson(|lentity|Service.add(|lentity|));
    }

    @RequestMapping(value = "/", method = RequestMethod.PUT, produces = "application/json")
    @Transactional
    public String update(@RequestBody |entity| |lentity|) {
        return gson.toJson(|lentity|Service.update(|lentity|));
    }

|endpoints|
}
